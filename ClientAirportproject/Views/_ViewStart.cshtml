

@{

    if (Session["user"] == null )
    {
        if (HttpContext.Current.Request.Url.AbsolutePath == "/FliteManager/About")
        {


            Layout = "~/Views/Shared/_LayoutPage3.cshtml";
        }
        else if (HttpContext.Current.Request.Url.AbsolutePath == "/FliteManager/Services")
        {


            Layout = "~/Views/Shared/_LayoutPage3.cshtml";
        }
        else if (HttpContext.Current.Request.Url.AbsolutePath == "/FliteManager/Contact")
        {


            Layout = "~/Views/Shared/_LayoutPage3.cshtml";
        }

        else if (HttpContext.Current.Request.Url.AbsolutePath == "/FliteManager/Login")
        {

            Layout = "~/Views/Shared/_LayoutPage3.cshtml";

        }
        else if (HttpContext.Current.Request.Url.AbsolutePath == "/FliteManager/Logout")
        {

            Layout = "~/Views/Shared/_LayoutPage1.cshtml";

        }
        else if (HttpContext.Current.Request.Url.AbsolutePath != "/FliteManager/Logout1")
        {
            Response.Redirect("/FliteManager/Logout1");

            Layout = "~/Views/Shared/_LayoutPage1.cshtml";

        }


        else
        {
            Layout = "~/Views/Shared/_LayoutPage1.cshtml";
        }





    }
    else
    {
        if (Session["job"].ToString()=="admin")
        {
            Layout = "~/Views/Shared/_LayoutPage2.cshtml";
        }

        else
        {
            Layout = "~/Views/Shared/_LayoutPage4.cshtml";
        }



    }

}
